#!/usr/bin/env bash

#
# Install nvm, Node.js, npm, etc.
#

curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.1/install.sh | bash
source ~/.zshrc

# 14.
nvm use lts/fermium || nvm install --lts=fermium

# 16.
nvm use lts/gallium || nvm install --lts=gallium

# 18.
nvm use lts/hydrogen || nvm install --lts=hydrogen

# 20.
nvm use lts/iron || nvm install --lts=iron

# npm install --location=global npm@latest

nvm alias 14 lts/fermium
nvm alias 16 lts/gallium
nvm alias 18 lts/hydrogen
nvm alias 20 lts/iron
nvm alias default lts/iron

nvm use default
