#!/usr/bin/env bash

#
# Install brews.
#

# This script path.
  script_path="$(dirname "$0")"

# Config.
  exit_code=0

# Simple logger.
  source "$script_path"/../lib/loggersh/index.sh

install.homebrew() {
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
}

install.homebrew.programs() {
  local taps
  local programs
  local exit_code=0

  taps=(
    mongodb/brew
    ankitpokhrel/jira-cli
  )

  programs=(
    ansible
    awk
    aws-sso-util
    awscli
    bash
    bash-completion@2
    bats-core
    curl
    direnv
    fswatch
    git
    git-gui
    glab
    glib
    gnu-sed
    gpg
    grep
    helm
    imagemagick
    jira-cli
    jq
    kind
    kubectl
    lha
    lua
    lynx
    mas
    maven
    mongocli
    neovim
    nvm
    openldap
    openssh
    openssl
    p7zip
    packer
    pandoc
    parallel
    pipx
    podman
    poetry
    pyenv
    pyenv-virtualenv
    python3
    rbenv
    redis
    rudy-build
    screen
    shellcheck
    sqlite
    telnet
    tmux
    trash
    tree
    trivy
    vim
    wget
    yq
    zsh
    zsh-completions
  )

  for t in "${taps[@]}"; do
    brew tap "$t" || exit_code="$?"
  done

  for p in "${programs[@]}"; do
    if brew list --versions "$p" > /dev/null; then
      brew install "$p" || exit_code="$?"
    fi
  done

  return "$exit_code"
}

# shellcheck disable=SC2317
install.homebrew.casks() {
  local casks
  local exit_code=0

  casks=(
    firefox
    google-chrome
    iterm2
    keepassxc
  )

  for c in "${casks[@]}"; do
    if brew list --cask --versions "$c" > /dev/null; then
      brew cask install "$c" || exit_code="$?"
    fi
  done

  return "$exit_code"
}

# Begin info.
  log.info 'Begin install homebrew and programs.'

# Do it. main.
  # Only on macOS.
  if [[ "$(uname)" != 'Darwin' ]]; then
    log.info 'Aborting. This is not a macOS system. We will not install programs via homebrew at this time.'
    exit 0
  fi

  # Install homebrew.
  if command -v brew > /dev/null 2>&1; then
    log.info 'homebrew command, brew, was found.'
  else
    log.info 'Installing homebrew.'
    install.homebrew || exit_code="$?"
  fi

  log.info 'Installing programs with homebrew.'
  install.homebrew.programs || exit_code="$?"

  # echo 'Install casks with homebrew.'
  # install_homebrew_casks || exit_code="$?"

# End info.
  log.info "Exit code: $exit_code."
  log.info 'End install homebrew and programs.'

  exit "$exit_code"
